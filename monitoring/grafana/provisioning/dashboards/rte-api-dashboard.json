{
  "dashboard": {
    "title": "RTE API - Monitoring",
    "uid": "rte-api-monitoring",
    "version": 1,
    "timezone": "browser",
    "editable": true,
    "panels": [
      {
        "id": 1,
        "title": "Requetes par minute",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(api_requests_total[1m])",
            "legendFormat": "{{method}} {{endpoint}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "Requetes/s", "show": true},
          {"show": true}
        ]
      },
      {
        "id": 2,
        "title": "Requetes en cours",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "api_requests_in_progress",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Enregistrements en base",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "db_consommation_records_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Latence requetes (p95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "Secondes", "show": true},
          {"show": true}
        ]
      },
      {
        "id": 5,
        "title": "Erreurs API",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(api_errors_total[1m])",
            "legendFormat": "{{endpoint}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "Erreurs/s", "show": true},
          {"show": true}
        ]
      },
      {
        "id": 6,
        "title": "Total requetes par endpoint",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by(endpoint) (api_requests_total)",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Status HTTP",
        "type": "bargauge",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by(status) (api_requests_total)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ]
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    }
  },
  "overwrite": true
}
